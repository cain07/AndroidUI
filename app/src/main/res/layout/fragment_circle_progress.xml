<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_ff"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.cain.ui.fragment.components.circle.view.CircleProgressbar
        android:id="@+id/cp_progress_first_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:cpb_backgroundProgressColor="@color/blue_00"
        app:cpb_backgroundProgressWidth="12dp"
        app:cpb_clockwise="true"
        app:cpb_foregroundProgressColor="@color/white_ff"
        app:cpb_foregroundProgressWidth="4dp"
        app:cpb_maxProgress="100"
        app:cpb_progress="100"
        app:cpb_roundedCorner="true"
        app:cpb_touchEnabled="true"
        />

    <com.cain.ui.fragment.components.circle.view.CircleProgressbar
        android:id="@+id/cp_progress_second"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        app:cpb_backgroundProgressColor="@color/blue_00"
        app:cpb_backgroundProgressWidth="12dp"
        app:cpb_clockwise="true"
        app:cpb_foregroundProgressColor="@color/gray_8a"
        app:cpb_foregroundProgressWidth="12dp"
        app:cpb_maxProgress="100"
        app:cpb_progress="100"
        app:cpb_roundedCorner="false"
        app:cpb_touchEnabled="false" />

    <com.cain.ui.fragment.components.circle.view.CircleProgressbar
        android:id="@+id/cp_progress_third"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:cpb_backgroundProgressColor="@color/transparent_color"
        app:cpb_backgroundProgressWidth="12dp"
        app:cpb_clockwise="true"
        app:cpb_foregroundProgressColor="@color/blue_00"
        app:cpb_foregroundProgressWidth="4dp"
        app:cpb_maxProgress="100"
        app:cpb_progress="100"
        app:cpb_roundedCorner="true"
        app:cpb_touchEnabled="true" />


    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@color/black_00"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="开始" />

        <Button
            android:id="@+id/btn_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:onClick="restore"
            android:text="恢复" />
    </LinearLayout>

</LinearLayout>
